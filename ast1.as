package  {	import flash.display.Sprite;	import flash.events.Event;		public class ast1 extends Sprite{		private var theAsteroid:asteroid1 = new asteroid1();		public function ast1() {			addChild(theAsteroid);			theAsteroid.stop();		}				public function explode() {			addEventListener(Event.ENTER_FRAME,doExplode);		}				private function doExplode(event:Event):void {						theAsteroid.alpha -= .2;			theAsteroid.play();						if (theAsteroid.alpha < 0) {				removeEventListener(Event.ENTER_FRAME,doExplode);				removeChild(theAsteroid);			}		}	}	}