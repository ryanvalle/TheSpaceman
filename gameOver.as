package  {		import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.events.MouseEvent;	import flash.media.Sound;	import flash.media.SoundTransform;	import flash.media.SoundChannel;	import flash.net.URLRequest;		public class gameOver extends MovieClip {				private var theOver:gameOverScreen = new gameOverScreen();		private var playBtn:playAgain = new playAgain();		private var returnBtn:returnHome = new returnHome();		private var firstFormat:TextFormat = new TextFormat();		private var scoreBox1:TextField;		private var starBackGround = new starBG();						private var theTheme1:Sound;		private var theThemeLoop1:SoundChannel;		private var musicVol:SoundTransform = new SoundTransform(.3);				public function gameOver(finalScore) {			theTheme1 = new Sound();			theThemeLoop1 = new SoundChannel();			theTheme1.load(new URLRequest("gameOverSong.mp3"));			theThemeLoop1 = theTheme1.play(0,1,musicVol);						addChild(starBackGround);			addChild(theOver);			theOver.x = 320;			theOver.y = 160;						addChild(returnBtn);			returnBtn.x = 320 - returnBtn.width / 2 - 5;			returnBtn.y = theOver.y + theOver.height/2 + 25;			returnBtn.buttonMode = true;						addChild(playBtn);			playBtn.x = 320 + playBtn.width / 2 + 5;			playBtn.y = theOver.y + theOver.height/2 + 25;			playBtn.buttonMode = true;						firstFormat.color = 0xff9948;			firstFormat.bold = true;			firstFormat.font = "Arial";			firstFormat.size = 30;			firstFormat.align = "center";						scoreBox1 = new TextField();			addChild(scoreBox1);			scoreBox1.text = "Final Score: " + finalScore;			scoreBox1.y = theOver.y - 15;			scoreBox1.width = 640;						scoreBox1.height = 50;			scoreBox1.setTextFormat(firstFormat);				scoreBox1.selectable = false;						returnBtn.addEventListener(MouseEvent.MOUSE_DOWN,goHome);			playBtn.addEventListener(MouseEvent.MOUSE_DOWN,playGame);		}				private function goHome(event:MouseEvent):void {			removeChild(theOver);			removeChild(scoreBox1);			removeChild(playBtn);			removeChild(returnBtn);			removeChild(starBackGround);			returnBtn.removeEventListener(MouseEvent.MOUSE_DOWN,goHome);			var homeScreen:startScreen = new startScreen();			addChild(homeScreen);			theThemeLoop1.stop();		}				private function playGame(event:MouseEvent):void {			removeChild(theOver);			removeChild(scoreBox1);			removeChild(playBtn);			removeChild(returnBtn);			removeChild(starBackGround);			var gamePlay:gameScreen = new gameScreen();			addChild(gamePlay);			playBtn.removeEventListener(MouseEvent.MOUSE_DOWN,playGame);			theThemeLoop1.stop();		}	}	}