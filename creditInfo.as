package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class creditInfo extends MovieClip {		private var credits:creditScreen = new creditScreen();		private var theReturn:returnButton = new returnButton();				public function creditInfo() {			addChild(credits);						addChild(theReturn);			theReturn.buttonMode = true;			theReturn.x = 640 - theReturn.width - 10;			theReturn.y = 380 - theReturn.height - 10;			theReturn.addEventListener(MouseEvent.MOUSE_DOWN,returnHome);		}		private function returnHome(event:MouseEvent):void {			theReturn.removeEventListener(MouseEvent.MOUSE_DOWN,returnHome);			removeChild(credits);			removeChild(theReturn);		}	}	}