package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.media.Sound;	import flash.net.URLRequest;	import flash.media.SoundChannel;	import flash.events.Event;	import flash.media.SoundTransform;			public class startScreen extends MovieClip {		private var backGround:openingScreenBG;		private var thePlay:playBtn;		private var theInstruct:instructButton;		private var theCredit:creditButton;		private var theStory:storyButton;		private var buttonX:Number = 630;		private var theTheme:Sound;		private var theThemeLoop:SoundChannel;		private var musicVol:SoundTransform = new SoundTransform(.3);		private var soundCheck:Boolean;				public function startScreen() {						backGround = new openingScreenBG();			thePlay = new playBtn();			theInstruct = new instructButton();			theStory = new storyButton();			theCredit = new creditButton();			theTheme = new Sound();						theTheme.load(new URLRequest("theTheme.mp3"));			theThemeLoop = theTheme.play(0,1000,musicVol);			addChild(backGround);			backGround.play();						addChild(thePlay);			thePlay.x = buttonX;			thePlay.y = 150;			thePlay.buttonMode = true;						addChild(theInstruct);			theInstruct.x = buttonX;			theInstruct.y = thePlay.y + thePlay.height + 10;			theInstruct.buttonMode = true;						addChild(theStory);			theStory.x = buttonX;			theStory.y = theInstruct.y + theInstruct.height + 10;			theStory.buttonMode = true;						addChild(theCredit);			theCredit.x = buttonX;			theCredit.y = theStory.y + theStory.height + 10;			theCredit.buttonMode = true;						thePlay.addEventListener(MouseEvent.MOUSE_DOWN,playGame);			theInstruct.addEventListener(MouseEvent.MOUSE_DOWN,playInstruct);			theStory.addEventListener(MouseEvent.MOUSE_DOWN,playStory);			theCredit.addEventListener(MouseEvent.MOUSE_DOWN,playCredits);		}				private function playGame(event:MouseEvent):void {			var gamePlay:gameScreen = new gameScreen();			addChild(gamePlay);			removeEventListener(MouseEvent.MOUSE_DOWN,playGame);			theThemeLoop.stop();		}				private function playInstruct(event:MouseEvent):void {			var instructions:inScreen = new inScreen();			addChild(instructions);						removeEventListener(MouseEvent.MOUSE_DOWN,playInstruct);					}				private function playStory(event:MouseEvent):void {			var storyScreen:storyInfo = new storyInfo();			addChild (storyScreen);						removeEventListener(MouseEvent.MOUSE_DOWN,playStory);		}				private function playCredits(event:MouseEvent):void {			var creditsScreen:creditInfo = new creditInfo();			addChild(creditsScreen);						removeEventListener(MouseEvent.MOUSE_DOWN,playCredits);		}		}	}