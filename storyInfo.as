package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;			public class storyInfo extends MovieClip {				private var theStory:storyScreen = new storyScreen();		private var theReturn:returnButton = new returnButton();				public function storyInfo() {			addChild(theStory);						addChild(theReturn);			theReturn.x = 640 - theReturn.width - 10;			theReturn.y = 380 - theReturn.height - 10;			theReturn.buttonMode = true;						theReturn.addEventListener(MouseEvent.MOUSE_DOWN, returnHome);		}						private function returnHome(event:MouseEvent):void {			theReturn.removeEventListener(MouseEvent.MOUSE_DOWN,returnHome);			removeChild(theStory);			removeChild(theReturn);		}			}	}