package  {	import flash.display.Sprite;	import flash.events.Event;		public class sate1 extends Sprite{		private var theSatellite:satellite = new satellite();		public function sate1() {			addChild(theSatellite);			theSatellite.stop();		}				public function explode() {			addEventListener(Event.ENTER_FRAME,doExplode);		}				private function doExplode(event:Event):void {			theSatellite.play();			alpha -= .2;			if (alpha < 0) {				removeEventListener(Event.ENTER_FRAME,doExplode);				removeChild(theSatellite);			}		}	}	}